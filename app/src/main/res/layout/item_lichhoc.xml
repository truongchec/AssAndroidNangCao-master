<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvNgayHoc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Thứ 5, Ngày 06/12/2018"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvPhongHoc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Phòng D412"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvMonHoc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Môn:Android Nâng Cao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvGvHoc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Giảng Viên: huynh2 "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>